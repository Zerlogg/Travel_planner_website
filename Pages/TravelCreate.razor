@page "/travelcreate"

<MudText Typo="Typo.h3" Class="justify-center d-flex"><b>Plan new trip</b></MudText>

<MudGrid Class="justify-center d-flex mt-4">
    <MudItem xs="12" sm="5">
        <MudPaper Class="pa-4">
            <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                <MudTextField T="string" Label="Where to?" HelperText="e.g. Paris, Washington, Riga" Required="true" />
                <MudContainer Class="d-inline-flex gap-4 pa-0">
                    <MudDatePicker For="@(() => model.Date)" Class="mud-width-full" Label="Start date" Required="true" />
                    <MudDatePicker For="@(() => model.Date)" Class="mud-width-full" Label="End date" Required="true" />
                </MudContainer>
                <MudNumericField @bind-Value="doubleValue" Label="Trip budget" Required="true" Format="F1" Class="mt-4" HideSpinButtons="true" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Euro" />
                <MudSelect T="string" Label="Transport" Variant="Variant.Text" Required="true">
                    <MudSelectItem Value="@("Rental car")" />
                    <MudSelectItem Value="@("Bus")" />
                    <MudSelectItem Value="@("Train")" />
                    <MudSelectItem Value="@("Walking")" />
                </MudSelect>
                <MudTextField T="string" Label="Accommodation preferences" HelperText="e.g. hotels, hostels, camping" Class="mt-0" Required="true" />
                <MudTextField T="string" Label="Personal preferences" Variant="Variant.Outlined" Lines="3" Class="mt-4"/>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="mt-4">Register</MudButton>
            </MudForm>   
        </MudPaper>
    </MudItem>
</MudGrid>
@code {
    bool success;
    string[] errors = { };
    MudTextField<string> pwField1;
    MudForm form;
    
    double doubleValue;
    
    DisplayNameLabelClass model = new();

    public class DisplayNameLabelClass
    {
        public DateTime? Date { get; set; }
    }

}