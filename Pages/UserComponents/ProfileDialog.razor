<AuthorizeView>
    <Authorized>
        <MudDialog>
            <DialogContent>
                <MudDivider Class="mb-4"/>
                <MudContainer Class="px-0 d-flex flex-column gap-2" Style="width: 350px">
                    <MudTextField T="string" Label="Username" Variant="Variant.Outlined" Class="mt-0"/>
                    <MudTextField T="string" Label="E-mail" Variant="Variant.Outlined" Class="mt-0"/>
                    <MudTextField T="string" Label="Password" Variant="Variant.Outlined" Class="mt-0"/>
                    <MudTextField T="string" Label="Repeat password" Variant="Variant.Outlined" Class="mt-0"/>
                </MudContainer>
                <MudContainer Class="px-0 mt-4 d-flex align-center gap-2">
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" Href="/logout">Sign out</MudButton>
                    <MudButton Variant="Variant.Outlined" Size="Size.Small" Color="Color.Error">Delete account</MudButton>
                </MudContainer>
                <MudDivider Class="mt-5" />
            </DialogContent>
            <DialogActions>
                <MudButton OnClick="Cancel">Cancel</MudButton>
                <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
            </DialogActions>
        </MudDialog>
    </Authorized>
</AuthorizeView>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}