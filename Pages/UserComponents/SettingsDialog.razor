<MudDialog>
    <DialogContent>
        <MudContainer Class="px-0 mb-2 d-flex flex-column">
            <MudText Typo="Typo.h6">Date format</MudText>
            <MudContainer Class="px-0 py-1 d-flex">
                <MudToggleGroup T="int?" SelectionMode="SelectionMode.SingleSelection" @bind-Value="_value1" Color="Color.Primary" CheckMark FixedContent>
                    <MudToggleItem Value="@((int?)1)" Text="Day/Month" />
                    <MudToggleItem Value="@((int?)2)" Text="Month/Day" />
                </MudToggleGroup>
            </MudContainer>
        </MudContainer>
        <MudContainer Class="px-0 mb-2 d-flex flex-column">
            <MudText Typo="Typo.h6">Distance format</MudText>
            <MudContainer Class="px-0 py-1 d-flex">
                <MudToggleGroup T="int?" SelectionMode="SelectionMode.SingleSelection" @bind-Value="_value2" Color="Color.Primary" CheckMark FixedContent>
                    <MudToggleItem Value="@((int?)1)" Text="Kilometers" />
                    <MudToggleItem Value="@((int?)2)" Text="Miles" />
                </MudToggleGroup>
            </MudContainer>
        </MudContainer>
        <MudContainer Class="px-0 d-flex flex-column">
            <MudText Typo="Typo.h6">Time format</MudText>
            <MudContainer Class="px-0 py-1 d-flex">
                <MudToggleGroup T="int?" SelectionMode="SelectionMode.SingleSelection" @bind-Value="_value3" Color="Color.Primary" CheckMark FixedContent>
                    <MudToggleItem Value="@((int?)1)" Text="24-hours" />
                    <MudToggleItem Value="@((int?)2)" Text="12-hours" />
                </MudToggleGroup>
            </MudContainer>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

    private int? _value1 = 1;
    private int? _value2 = 1;
    private int? _value3 = 1;
}