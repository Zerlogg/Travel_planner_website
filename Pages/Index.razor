@page "/"
@layout IndexLayout

<MudMainContent class="full-page-background d-flex justify-center align-center">
    <div class="full-page-background">
        <MudImage Src="Images/Travel.jpg" Alt="Travel" Class="full-page-image" />
    </div>
    <div class="d-flex flex-column align-center">
        <MudText Typo="Typo.h1" Style="position: relative; color: white"><b>Welcome to Traveling Trips!</b></MudText>
        <MudText Typo="Typo.h3" Style="position: relative; color: white" Class="mt-2">Create unforgettable memories, and plan your next trip today!</MudText>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" Size="Size.Large"  Href="/travelcreate" Class="mt-6 px-8 py-3">Create</MudButton>
    </div>
</MudMainContent>