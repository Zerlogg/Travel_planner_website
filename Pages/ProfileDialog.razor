<MudDialog>
    <DialogContent>
        <MudContainer Class="px-0 d-flex align-center">
            <MudContainer Class="px-0 d-flex justify-center align-center">
                <MudAvatar Size="Size.Large" Style="height:90px; width:90px">
                    <MudImage Src="Images/User.png" Height="110"/>
                </MudAvatar>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Dark" Style="position: absolute"/>
            </MudContainer>
            <MudContainer Class="pa-3 d-flex flex-column">
                <MudContainer Class="px-0 d-flex align-center gap-1">
                    <MudText Typo="Typo.h6">Abraham Lincoln</MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small"/>
                </MudContainer>
                <MudText >abrahamlincoln@gmail.com</MudText>
            </MudContainer>
        </MudContainer>
        <MudDivider Class="mt-4" />
        <MudContainer Class="px-0 mt-4 d-flex align-center gap-2">
            <MudButton Variant="Variant.Outlined">Sign out</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Error">Delete account</MudButton>
        </MudContainer>
        <MudDivider Class="mt-4" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}