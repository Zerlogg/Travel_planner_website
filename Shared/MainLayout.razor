@inherits LayoutComponentBase
@inject IDialogService DialogService
@using TravelingTrips.Pages

<PageTitle>Traveling trips</PageTitle>

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudContainer MaxWidth="MaxWidth.Large" Class="px-0 d-flex align-center">
            <MudIcon Icon="@Icons.Material.Filled.Flight" Size="Size.Large" Class="pr-2"></MudIcon>
            <MudText Typo="Typo.h5" Class="pr-8 cursor-default"><b>Traveling Trips</b></MudText>
            <MudLink Href="/home" Color="Color.Inherit" Typo="Typo.h6" Class="pr-8">Home</MudLink>
            <MudLink Href="/travels" Color="Color.Inherit" Typo="Typo.h6" Class="pr-8">Trips</MudLink>
            <MudLink Href="/collections" Color="Color.Inherit" Typo="Typo.h6" Class="pr-8">Collections</MudLink>
            <MudLink Href="/map" Color="Color.Inherit" Typo="Typo.h6" Class="pr-8">Map</MudLink>
            <MudSpacer/>
            <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Target="_blank" @onclick="Profile"/>
            <MudLink Href="/logout" Color="Color.Inherit" Typo="Typo.h6" Underline="Underline.None" Class="pl-3">Sign out</MudLink>
        </MudContainer>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 px-0">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    private void Profile()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };
        DialogService.Show<ProfileDialog>("Your profile", options);
    }
}