@inherits LayoutComponentBase

<PageTitle>Traveling trips</PageTitle>

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudContainer MaxWidth="MaxWidth.Large" Class="px-0 d-flex align-center">
            <MudIcon Icon="@Icons.Material.Filled.Flight" Size="Size.Large" Class="pr-2"></MudIcon>
            <MudText Typo="Typo.h5" Class="pr-8 cursor-default"><b>Traveling Trips</b></MudText>
            <MudLink Href="" Color="Color.Inherit" Typo="Typo.h6" Class="pr-8">Home</MudLink>
            <MudLink Href="/folders" Color="Color.Inherit" Typo="Typo.h6" Class="pr-8">Folders</MudLink>
            <MudLink Href="/history" Color="Color.Inherit" Typo="Typo.h6" Class="pr-8">Map</MudLink>
            <MudSpacer/>
            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Target="_blank"/>
            <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Target="_blank"/>
        </MudContainer>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 px-0">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>