@page "/logout"
@using TravelingTrips.Models
@attribute [IgnoreAntiforgeryToken]
@inject SignInManager<User> SignInManager

@functions
{
    public async Task<IActionResult> OnGet()
    {
        if (SignInManager.IsSignedIn(User))
        {
            await SignInManager.SignOutAsync();
        }

        return Redirect("~/");
    }
}

